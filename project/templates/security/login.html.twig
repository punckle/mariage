{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="container ml-auto mr-auto">
            <div class="row mt-5">
                <div class="col-lg-3 col-12"></div>
                <div class="col-lg-6 col-12">
                    <div class="br-light py-3 px-3">
                        <h1 class="text-center">Se connecter</h1>
                        <div class="form-group">
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" placeholder="Adresse mail" class="form-control" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control" required>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <a href="" class="btn btn-light submit" type="button">
                                Mot de passe oubli√©
                            </a>
                            <button class="btn btn-lg btn-primary submit" type="submit">
                                Se connecter
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
