{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/admin.css') }}">
{% endblock %}

{% block body %}

    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light masthead text-white">
        <div class="col-md-5 p-lg-5 mx-auto my-5">
            <h1 class="display-4 font-weight-normal">Espace admin</h1>
        </div>
    </div>

    <div class="position-relative overflow-hidden text-center">
        <div class="p-lg-5 mx-auto my-2">
            <div class="row ">
                <div class="col-4">
                    <div class="card border-secondary mb-3">
                        <div class="card-body">
                            <h4 class="card-title"><i class="fas fa-users"></i></h4>
                            <h4>
                                <a href="{{ path('user_index') }}" style="text-decoration: none; color: black;">Utilisateurs</a>
                            </h4>
                            <span class="badge badge-dark">{{ users|length }} utilisateurs</span>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card border-secondary mb-3">
                        <div class="card-body">
                            <h4 class="card-title"><i class="fas fa-gift"></i></h4>
                            <h4>
                                <a href="{{ path('guest_index') }}" style="text-decoration: none; color: black;">Invités</a>
                            </h4>
                            <span class="badge badge-dark">{{ guests|length}} invités</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
