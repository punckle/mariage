{% extends 'base.html.twig' %}

{% block title %}Nouvel invité de {{ guest.firstName }} {{ guest.lastName }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/guest.css') }}">
{% endblock %}

{% block body %}

    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light masthead text-white">
        <div class="col-md-5 p-lg-5 mx-auto my-5">
            <h1 class="display-4 font-weight-normal">Nouvel invité de {{ guest.firstName }} {{ guest.lastName }}</h1>
        </div>
    </div>

    <div class="text-center">
        <a href="{{ path('guest_index') }}" class="btn btn-outline-dark"><i class="fas fa-arrow-circle-left"></i></a>
    </div>

    <div class="position-relative overflow-hidden text-center">
        <div class="p-lg-5 mx-auto my-2">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_widget(form.firstName) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_widget(form.lastName) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    {{ form_widget(form.comment) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    {{ form_widget(form.kid) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    {{ form_widget(form.apero) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    {{ form_widget(form.dinner) }}
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                {{ form_widget(form.save) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
