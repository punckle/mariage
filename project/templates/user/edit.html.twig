{% extends 'base.html.twig' %}

{% block title %}Editer {{ user.email }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/admin.css') }}">
{% endblock %}

{% block body %}

    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light masthead text-white">
        <div class="col-md-5 p-lg-5 mx-auto my-5">
            <h1 class="display-4 font-weight-normal">{{ user.email }}</h1>
        </div>
    </div>

    <div class="position-relative overflow-hidden text-center">
        <div class="p-lg-5 mx-auto my-2">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col">
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    {{ form_widget(form.actif) }}
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                {{ form_widget(form.save) }}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="p-lg-5 mx-auto my-1">
            <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Supprimer l'utilisateur</a>
        </div>
    </div>

{% endblock %}
